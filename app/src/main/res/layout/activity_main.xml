<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GPA Calculator"
        android:textSize="40dp"
        android:layout_marginBottom="40dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Course Grade 1"
        android:textSize="24sp"
        android:labelFor="@id/enter_course_grade_1" />

    <EditText
        android:id="@+id/enter_course_grade_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="5"
        android:importantForAutofill="no" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Course Grade 2"
        android:textSize="24sp"
        android:labelFor="@id/enter_course_grade_2" />

    <EditText
        android:id="@+id/enter_course_grade_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="5"
        android:importantForAutofill="no" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Course Grade 3"
        android:textSize="24sp"
        android:labelFor="@id/enter_course_grade_3" />

    <EditText
        android:id="@+id/enter_course_grade_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="5"
        android:importantForAutofill="no" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Course Grade 4"
        android:textSize="24sp"
        android:labelFor="@id/enter_course_grade_4" />

    <EditText
        android:id="@+id/enter_course_grade_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="5"
        android:importantForAutofill="no" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Course Grade 5"
        android:textSize="24sp"
        android:labelFor="@id/enter_course_grade_5" />

    <EditText
        android:id="@+id/enter_course_grade_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="5"
        android:importantForAutofill="no" />


    <Button
        android:id="@+id/computeGPA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="2.5dp"
        android:onClick="computeGPA"
        android:text="Compute GPA" />



     <TextView
        android:id="@+id/textView"
        android:textSize="24sp"
        android:gravity="center"
        android:layout_marginVertical="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         android:hint="Your GPA is: " />




</LinearLayout>